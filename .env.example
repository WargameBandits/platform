# === Domain ===
DOMAIN=wargamebandit.is-a.dev
ENVIRONMENT=development  # development | production

# === Backend ===
SECRET_KEY=change-me-to-random-string
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# === Database ===
POSTGRES_USER=wargame
POSTGRES_PASSWORD=change-me-to-strong-password
POSTGRES_DB=wargame
# 로컬 (Docker Compose):
DATABASE_URL=postgresql+asyncpg://wargame:change-me-to-strong-password@db:5432/wargame
# Neon (Render 배포 시):
# DATABASE_URL=postgres://user:password@ep-xxx-xxx-123456.us-east-2.aws.neon.tech/neondb?sslmode=require

# === Redis ===
# 로컬 (Docker Compose):
REDIS_URL=redis://redis:6379/0
# Render 배포 시: 비워두거나 Upstash URL 사용
# REDIS_URL=

# === Feature Flags ===
# Render/Vercel 배포 시 false, 셀프 호스팅(Oracle Cloud 등) 시 true
CELERY_ENABLED=false
DOCKER_ENABLED=false

# === Docker Instance (DOCKER_ENABLED=true일 때만 사용) ===
CONTAINER_PORT_RANGE_START=30000
CONTAINER_PORT_RANGE_END=39999
CONTAINER_TIMEOUT_SECONDS=1800
CONTAINER_MAX_PER_USER=3
CONTAINER_CPU_LIMIT=0.5
CONTAINER_MEM_LIMIT=128m

# === CORS ===
# 로컬:
CORS_ORIGINS=["http://localhost:3000","http://localhost:80"]
# Render+Vercel 배포 시:
# CORS_ORIGINS=["https://wargame-bandits.vercel.app"]

# === Certbot (셀프 호스팅 프로덕션 전용) ===
CERTBOT_EMAIL=your-email@example.com
